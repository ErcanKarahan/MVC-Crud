@model CategoryVM
@{
    ViewBag.Title = "CategoryList";
}

<h2>CategoryList</h2>

<div class="container">
    <div class="panel panel-primary">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Kategori Ismi</th>
                    <th>Kategori Acıklaması</th>
                </tr>
            </thead>
            <tbody>
               @foreach (Category item in Model.Categories)
               {
                   <tr>
                       <td>@item.CategoryName</td>
                       <td>@item.Description</td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
</div>

